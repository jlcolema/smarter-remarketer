/*Class to set the width for the whole Carousel. You can set the width and height as you want */
.widget {
	width:864px;
	margin:auto;
	position:absolute;
	top:-9999em;
	left:0;
	margin-top:50px;
}
/*Class to set the styling option for the previous button on the Carousel */

.widget a.prev {
	position:absolute; left:0; top:11px; background:url(../images/sprite_plus_minus.png) 0 -51px no-repeat; height:17px; width:18px; display:block;
}
.widget a.prev:hover {
	background-position:0 -34px;
}
/*Class to set the styling option for the next button on the Carousel */

.widget a.next {
	position:absolute; right:0; top:11px; background:url(../images/sprite_plus_minus.png) 0 -17px no-repeat; height:17px; width:18px; display:block;
}
.widget a.next:hover {
	background-position:0 0;
}
/*Class to set the styling option for the scroller part of the Carousel */

.widget_style {
	text-align:left;
	padding:0px 0px 0px 0px;
	width:715px !important;
	margin:auto;
}
.widget_style ul {
	margin:0;
	padding:0;
}
/*Class to set the image background and the size of it, do note that it’s not the size of the scrolling images, it sets the size of the background image that I’ve used for every actual image that will be scrolling*/

.widget_style li {
	height:40px;
	width:158px;
	list-style:none;
	margin:0;
	padding:0 10px;
	border-right:1px solid #d8d8d8;
}
/*This here actually sets the size of the scrolling images */

.widget_style img {
	width:158px;
	height:40px;
	max-height:100%;
	max-width:100%;
	border:0;
}
